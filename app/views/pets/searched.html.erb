<div class = container>
<h1>Searched page</h1>
  <div class="row">
    <div class="col-8">
      <div class="card-columns">
        <% lost_pets = [] %>
        <% @pets.each do |pet| %>
          <% if pet.status == "Lost" %>
            <% lost_pets << pet %>
          <% end %>
        <% end %>
        <% lost_pets[0..8].each do |pet| %>
          <%= link_to pet do %>
            <div class="card">
              <%= cl_image_tag pet.photos.first.key, class: "card-img-top" %>
              <div class="card-body">
                <p class="card-text"><%= pet.description %></p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-4">
      <div
        id="lost-map"
        style="width: 100%;
        height: 600px;"
        data-markers="<%= @lostmarkers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>